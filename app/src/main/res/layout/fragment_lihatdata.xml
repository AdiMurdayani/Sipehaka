<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Main2Activity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/textlihatData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SISTEM PAKAR"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/buttonData1"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Kakao"
            android:textStyle="bold"
            android:onClick="buttonData1"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:background="@drawable/btn_konsultasi"/>

        <Button
            android:id="@+id/buttonData2"
            android:layout_marginTop="20dp"
            android:onClick="buttonData2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Penyakit"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:background="@drawable/btn_konsultasi"/>

        <Button
            android:id="@+id/buttonData3"
            android:onClick="buttonData3"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Hama"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="17dp"
            android:textAllCaps="false"
            android:background="@drawable/btn_konsultasi"/>

    </LinearLayout>

</RelativeLayout>